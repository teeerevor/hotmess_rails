%script#song-template{:type =>"text/x-handlebars-template"}
  {{#unless short_list}}
  %a{name:'{{first_letter name}}'}
  {{/unless}}
  .song_header
    .song_tab
      .song_details
        %h3.song_name {{song_name_trim name}}
        .artist_name {{artist.name}}
        .no-sound-assets-msg
          (Not playable)
    .buttons
      %button.short_list_to_pos.button.black.hotmess_regular.up{title: "Short list to top"}
        %i.icon-up
      %button.short_list_song.button.black{:title => "Short list"}
        %i.icon-plus
      %button.move_to_pos.button.black{:title => "Move to top"}
        %i.icon-up
      %button.remove.button.black{:title => "Remove song from list"}
        %i.icon-cross
  .song_extras
    .youtube_vid
    -#%img{src:"{{artist.image}}"}
    %a{href:'{{artist.content_link}}'}
      .desc
        {{artist.desc}}
